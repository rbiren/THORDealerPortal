  @@index([receivedDate])
}

// Vehicle Order - different from parts orders
model VehicleOrder {
  id                String    @id @default(cuid())
  orderNumber       String    @unique   // VO-2025-00001

  // Dealer
  dealerId          String
  dealer            Dealer    @relation(fields: [dealerId], references: [id])
  salesPersonId     String?             // User who made the sale

  // Order Type
  orderType         String    @default("stock") // stock (existing unit), factory (build order), locate

  // Unit Being Ordered
  rvUnitId          String?             // For stock orders - specific VIN
  rvUnit            RVUnit?   @relation(fields: [rvUnitId], references: [id])

  // Or Factory/Build Order
  rvModelId         String?             // For factory orders
  rvModel           RVModel?  @relation(fields: [rvModelId], references: [id])
  requestedExteriorColor String?
  requestedInteriorColor String?
  requestedOptions  String?             // JSON array of option codes

  // Customer Info (if retail sale)
  customerType      String    @default("retail") // retail, wholesale, internal
  customerName      String?
  customerEmail     String?
  customerPhone     String?
  customerAddress   String?             // JSON

  // Trade-In
  tradeInId         String?   @unique
  tradeIn           TradeIn?  @relation(fields: [tradeInId], references: [id])

  // Pricing
  unitPrice         Float               // Negotiated price
  optionsPrice      Float     @default(0)
  freightPrice      Float     @default(0)
  prepFee           Float     @default(0)
  docFee            Float     @default(0)
  additionalFees    String?             // JSON array of additional fees
  tradeInAllowance  Float     @default(0)
  tradeInPayoff     Float     @default(0) // Lien payoff on trade
  rebatesApplied    Float     @default(0)
  taxAmount         Float     @default(0)
  totalPrice        Float

  // Payment
  depositAmount     Float     @default(0)
  depositDate       DateTime?
  paymentMethod     String?             // cash, financing, lease, floor_plan
  financingDetails  String?             // JSON: { lender, term, rate, payment }

  // Delivery
  deliveryMethod    String?             // dealer_pickup, factory_delivery, transport
  deliveryAddress   String?             // JSON
  requestedDeliveryDate DateTime?
  estimatedDeliveryDate DateTime?
  actualDeliveryDate DateTime?
  deliveryNotes     String?

  // Documentation
  documentsComplete Boolean   @default(false)
  titleReceived     Boolean   @default(false)
  titleSent         Boolean   @default(false)
  registrationComplete Boolean @default(false)

  // Status Workflow
  status            String    @default("quote") // quote, pending_approval, approved, confirmed,
                                                // in_production, ready, in_transit, delivered,
                                                // completed, cancelled

  // Notes
  internalNotes     String?
  customerNotes     String?

  // Timestamps
  quotedAt          DateTime?
  submittedAt       DateTime?
  approvedAt        DateTime?
  confirmedAt       DateTime?
  cancelledAt       DateTime?
  cancelReason      String?
  completedAt       DateTime?

  statusHistory     VehicleOrderStatusHistory[]
  vehicleInvoice    VehicleInvoice?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([orderNumber])
  @@index([dealerId])
  @@index([rvUnitId])
  @@index([rvModelId])
  @@index([status])
  @@index([orderType])
  @@index([createdAt])
}

model VehicleOrderStatusHistory {
  id              String        @id @default(cuid())
  orderId         String
  order           VehicleOrder  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  fromStatus      String?
  toStatus        String
  changedById     String?
  note            String?

  createdAt       DateTime      @default(now())

  @@index([orderId])
  @@index([createdAt])
}

// Trade-In Vehicle
model TradeIn {
  id                String    @id @default(cuid())

  // Vehicle Info
  vehicleType       String              // rv, auto, truck, motorcycle, boat
  year              Int
  make              String
  model             String
  trim              String?
  vin               String?

  // Condition
  mileage           Int?
  hours             Int?                // For RVs/boats
  condition         String              // excellent, good, fair, poor
  conditionNotes    String?

  // For RV Trade-ins
  rvClass           String?             // Class A, B, C, etc.
  lengthFeet        Int?
  slideOuts         Int?

  // Valuation
  estimatedValue    Float               // Initial estimate
  nada_value        Float?              // NADA book value
  appraisedValue    Float?              // After inspection
  approvedValue     Float?              // Final approved value
  acv               Float?              // Actual Cash Value

  // Lien Info
  hasLien           Boolean   @default(false)
  lienHolder        String?
  lienPayoff        Float?
  lienPayoffGoodThrough DateTime?

  // Photos
  photos            String?             // JSON array of photo URLs

  // Status
  status            String    @default("pending") // pending, appraised, approved, rejected, completed

  // Notes
  appraisalNotes    String?
  internalNotes     String?

  // Linked to order
  vehicleOrder      VehicleOrder?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([vin])
  @@index([status])
  @@index([vehicleType])
}

// Service/Repair Records per Unit
model ServiceRecord {
  id                String    @id @default(cuid())

  rvUnitId          String
  rvUnit            RVUnit    @relation(fields: [rvUnitId], references: [id], onDelete: Cascade)

  // Service Info
  serviceType       String              // warranty, recall, customer_pay, pdi, internal
  serviceNumber     String?             // RO number

  // Description
  description       String
  complaint         String?             // Customer complaint
  cause             String?             // Cause found
  correction        String?             // What was done

  // Labor & Parts
  laborHours        Float?
  laborRate         Float?
  laborCost         Float?
  partsCost         Float?
  subletCost        Float?              // Outside vendor costs
  totalCost         Float?

  // Parts Used (JSON array)
  partsUsed         String?             // JSON: [{ partNumber, name, qty, cost }]

  // Mileage/Hours at Service
  mileageIn         Int?
  hoursIn           Int?

  // Technician
  technicianId      String?
  technicianName    String?

  // Status
  status            String    @default("open") // open, in_progress, completed, cancelled

  // Related Claim
  warrantyClaimId   String?

  // Dates
  dateIn            DateTime
  dateOut           DateTime?
  promisedDate      DateTime?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([rvUnitId])
  @@index([serviceType])
  @@index([status])
  @@index([dateIn])
}

// Vehicle-specific Invoice (different from parts invoice)
model VehicleInvoice {
  id                String    @id @default(cuid())
  invoiceNumber     String    @unique   // VI-2025-00001

  // Links
  vehicleOrderId    String    @unique
  vehicleOrder      VehicleOrder @relation(fields: [vehicleOrderId], references: [id])
  rvUnitId          String
  rvUnit            RVUnit    @relation(fields: [rvUnitId], references: [id])
  dealerId          String
  dealer            Dealer    @relation(fields: [dealerId], references: [id])

  // Status
  status            String    @default("draft") // draft, sent, paid, cancelled

  // Line Items (denormalized for invoice record)
  unitDescription   String              // "2025 Thor Aria 4000 - VIN: xxx"
  unitPrice         Float
  optionsDetail     String?             // JSON array of options with prices
  optionsTotal      Float     @default(0)
  freightCharge     Float     @default(0)
  prepCharge        Float     @default(0)
  docFee            Float     @default(0)
  additionalCharges String?             // JSON array

  // Trade
  tradeDescription  String?
  tradeAllowance    Float     @default(0)
  tradePayoff       Float     @default(0)

  // Totals
  subtotal          Float
  rebatesApplied    Float     @default(0)
  taxAmount         Float     @default(0)
  totalAmount       Float
  depositApplied    Float     @default(0)
  balanceDue        Float

  // Payment
  paymentMethod     String?
  paymentReference  String?
  paidDate          DateTime?

  // PDF
  pdfUrl            String?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([invoiceNumber])
  @@index([vehicleOrderId])
  @@index([dealerId])
  @@index([status])
}

// Unit-Based Incentives
model RVModelIncentive {
  id                String    @id @default(cuid())

  programId         String
  program           IncentiveProgram @relation(fields: [programId], references: [id])
  rvModelId         String
  rvModel           RVModel   @relation(fields: [rvModelId], references: [id])

  // Incentive Amount
  incentiveType     String              // per_unit, percentage, tiered
  amount            Float               // Dollar amount or percentage

  // Conditions
  conditions        String?             // JSON: { minUnits, requireDemo, etc. }

  // Validity
  validFrom         DateTime
  validTo           DateTime?

  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@unique([programId, rvModelId])
  @@index([programId])
  @@index([rvModelId])
  @@index([validFrom])
}
